<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="caecode" _name="Caecode Theme" version="1.0">
  <author>antigravity</author>
  <_description>Monochrome theme for Caecode</_description>

  <!-- Monochrome Palette -->
  <color name="bg"        value="#121212"/>
  <color name="fg"        value="#E0E0E0"/>
  <color name="grey"      value="#808080"/>
  <color name="lightgrey" value="#D3D3D3"/>
  <color name="white"     value="#FFFFFF"/>
  <color name="darkgrey"  value="#404040"/>
  <color name="selection" value="#333333"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="fg" background="bg"/>
  <style name="selection"                   background="selection"/>
  <style name="cursor"                      foreground="white"/>
  <style name="current-line"                background="#1A1A1A"/>
  <style name="line-numbers"                foreground="darkgrey" background="#0C0C0C"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="darkgrey"/>
  <style name="def:shebang"                 foreground="darkgrey" bold="true"/>

  <!-- Constants/Values -->
  <style name="def:constant"                foreground="white"/>
  <style name="def:string"                  foreground="white"/>
  <style name="def:number"                  foreground="white"/>
  <style name="def:boolean"                 foreground="white"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="fg"/>

  <!-- Keywords/Statements -->
  <style name="def:statement"               foreground="grey" bold="true"/>
  <style name="def:type"                    foreground="grey" bold="true"/>
  <style name="def:keyword"                 foreground="grey" bold="true"/>

  <!-- Operators/Symbols -->
  <style name="def:operator"                foreground="lightgrey"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="grey"/>
  <style name="def:error"                   foreground="#FF0000" bold="true"/>
  <style name="def:note"                    foreground="#FFFF00" bold="true"/>
</style-scheme>
